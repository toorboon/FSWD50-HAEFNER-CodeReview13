{% extends 'base.html.twig' %}
{% block body %}
 
  
    <div class="card-deck">
{% for event in events %}
      <div class="col-xs-12 col-sm-12 col-md-6 col-lg-4 col-xl-3 my-2 rounded">
      <div class="h-100 card  text-center "> 
        <img class="img-fluid rounded" src="{{event.Image}}" alt="No image yet!">
          <div class="card-body">
            
            <div class="card-header">
              <h2 class="page-header">{{event.name}}</h2>
            </div>
           <ul class="list-group">
                <li class="list-group-item">Start Date: {{event.StartDate|date('F j, Y, g:i a')}}</li>
                <li class="list-group-item">Address: {{event.Address}}</li>
                <li class="list-group-item">Url: {{event.Url}}</li>
                <li class="list-group-item">Event Type: {{event.EventType}}</li>
                <li class="list-group-item"> 
                  <div class="btn-group-vertical">
                    <a href="/event/details/{{event.Id}}" class="btn btn-success">View</a>
                    <a href="/event/edit/{{event.Id}}" class="btn btn-secondary">Edit</a>
                    <a href="/event/delete/{{event.Id}}" class="btn btn-danger">Delete</a>
                  </div>
                </li>
           </ul>
           <small class="text-muted block">Created {{event.CreateDate|date('F j, Y, g:i a')}}</small>
       </div>
     </div>
    </div>
{% endfor %}
    </div>
  

{% endblock %}


  


  